  p {
    font-weight: 300;
  }

  header {
    background-color: var(--header-color);
    color: var(--text-color);
    padding: 1rem var(--side-padding);
    border-bottom: 1px solid var(--border-color);
  }

  header h1 a {
    text-decoration: none;
    color: var(--text-color);
  }

  .heading {
    margin-bottom: 1rem;
  }

